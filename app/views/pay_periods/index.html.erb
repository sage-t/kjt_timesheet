<p id="notice"><%= notice %></p>

<h1>Pay Periods</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_periods.each do |pay_period| %>
      <tr>
        <td><%= pay_period.start %></td>
        <td><%= pay_period.end %></td>
        <td><%= link_to 'Show', pay_period %></td>
        <td><%= link_to 'Edit', edit_pay_period_path(pay_period) %></td>
        <td><%= link_to 'Destroy', pay_period, method: :delete, data: { confirm: "Are you sure? This can't be undone and will delete all punches made in this period!" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pay Period', new_pay_period_path %>
